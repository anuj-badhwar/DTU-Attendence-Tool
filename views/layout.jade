doctype html
html
  head
    title DTU Attendence
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body
    nav.navbar.navbar-default.navStyle
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') DTU Attendence
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            if !user
              li(class=(title=='login'?'active':''))
                a(href='/login') Login
              li(class=(title=='register'?'active':''))
                a(href='/register') Register
            if user
              li(class=(title=='dashboard'?'active':''))
                a(href='/'+userType+'/dashboard') Dashboard
              if user
                li(class=(title=='classes'?'active':''))
                  a(href='/'+userType+'/classes') Classes
                li(class=(title=='search'?'active':''))
                  a(href='/'+userType+'/report') Report

          if user
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/logout')
                  | Logout
                  span.sr-only (current)
    .container
      !=messages()
      block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascripts/bootstrap.js')
